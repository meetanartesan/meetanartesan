{{#if userInSession}}
<div>
  <form id="logout-form" action="/logout" method="POST">
    <button>Logout</button>
  </form>
</div>

<div>
  <h2>Welcome, {{ userInSession.username }}</h2>
</div>
<div>
  <p>This is your personal user area!</p>
</div>

<div>
  <button>
    <a href="/userProfile">Reload the page</a>
  </button>
</div>

<div>
  <button>
    <a href="/inputForm">Share experiences</a>
  </button>
</div>

<div>
  <button>
    <a href="/dashboard">Browse experiences</a>
  </button>
</div>

{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}