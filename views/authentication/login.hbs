<div id="login">
  <div class="login-title">
    <h2>Login</h2>
  </div>
  <div class="login-input-container">
    <form action="/login" method="POST" class="login-input-form">
      <div class="input-div">
        {{!-- <label for="input-username">Username</label> --}}
        <input class="login-input" type="text" placeholder="username" name="username" autocomplete="off" required/>
      </div>

      <div class="input-div">
        {{!-- <label for="input-password">Password</label> --}}
        <input class="login-input" type="password" placeholder="password" name="password" autocomplete="off" required />
      </div>

      <div class"login-btn-div">
        <button class="login-btn" type="submit">LOGIN</button>
      </div>
    {{!-- error message will be added here --}}
    </form>
  </div>
</div>